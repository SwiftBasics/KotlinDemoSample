<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_4" />
            <solid android:color="@color/transparent" />
            <stroke android:width="@dimen/margin_2" android:color="@color/white" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_4" />
            <stroke android:width="@dimen/margin_2" android:color="@color/marun" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_4" />
            <stroke android:width="@dimen/margin_2" android:color="@color/edt_border" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_4" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</selector>