<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/seperator" android:color="@color/light_gray_color" />
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/margin_4" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/seperator" android:color="@color/bg" />
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/margin_4" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/seperator" android:color="@color/light_gray" />
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/margin_4" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/seperator" android:color="@color/light_gray" />
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/margin_4" />
        </shape>
    </item>
</selector>
